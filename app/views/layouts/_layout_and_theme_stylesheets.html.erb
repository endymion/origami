<%  theme = THEME if defined?(THEME)
	theme = @theme unless @theme.nil?
	if theme.nil? %>
	<%= body %>
<% else %>
	<%= stylesheet_link_tag "layouts/#{layout}" %>
	<%= stylesheet_link_tag theme %>
<% end %>
<% if defined?(WIDTH) %>
	<style>
		#page {
			width: <%= WIDTH %>;
			margin-left: auto;
			margin-right: auto;
		}
	</style>
<% end %>
